Bootstrap: docker
From: registrygitlab.curie.fr/cubic-registry/proteinfold/massivefold:MFv1.0.0-hhsuite-compile-avx2

%environment
  export LC_ALL=C
  export PATH="/opt/conda/bin:/usr/local/cuda-11.1/bin:$PATH"
  export PATH="$PATH:/app"

%post
  echo $'#! /bin/bash\npython /app/alphafold/run_alphafold.py "$@"' > /app/launch_alphafold.sh \
  && chmod +x /app/launch_alphafold.sh

%runscript
  cd /app/alphafold
  ldconfig -C /mnt/output/ld.so.cache
  exec python /app/alphafold/run_alphafold.py "$@"

