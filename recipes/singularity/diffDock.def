Bootstrap: docker
From: registrygitlab.curie.fr/cubic-registry/proteinfold/diffdock:v1.1.2-base

%environment
  export LC_ALL=C
  export PATH="/opt/conda/bin:$PATH"
  export PATH="$PATH:/app"
  source /opt/etc/bashrc

%files
  diffDock/diffDock.patch /app/diffdock/diffDock.patch

%post
  apt update \
  && apt install -y patch
  cd /app/diffdock \
  && patch -p1 < diffDock.patch

