Bootstrap: docker
From: registrygitlab.curie.fr/cubic-registry/proteinfold/alphafold:v2.3.2-hhsuite-compile-avx2

%environment
  export LC_ALL=C
  export PATH="/opt/conda/bin:/usr/local/cuda-11.1/bin:$PATH"
  export PATH="$PATH:/app"

%runscript
  cd /app/alphafold
  ldconfig -C /mnt/output/ld.so.cache
  exec python /app/alphafold/run_alphafold.py "$@"

